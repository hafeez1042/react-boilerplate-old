{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
        // "class-methods-use-this": [2, { "exceptMethods": ["componentDidMount", "render"] }],
        "react/jsx-uses-react": 2
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    }

}